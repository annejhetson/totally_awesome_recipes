<div class="container main">
  <h1>Totally Awesome Recipes</h1>

  <% @recipes.each do |recipe| %>
    <div class="col col-md-3">
      <div class="post">
        <a href="/recipes/<%= recipe.id %>"><img src=<%= recipe.picture %>></a>
        <a href="/recipes/<%= recipe.id %>"><h3><%= recipe.name %></h3></a>
        <p><%= recipe.description[0..50] %></P>
      </div>
    </div>
  <% end %>
</div>
