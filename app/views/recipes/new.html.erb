<div class ="main container">

  <h1>Post a new recipe below</h1>
  <br>
  <form role="form" acion="/recipes/new" method="post">
    <div class="form-group">
      <input class="form-control" id="name" name="recipe[name]" type="text" placeholder="Recipe Name...">
    </div>
    <div class="form-group">
      <textarea class="form-control" id="description" name="recipe[description]" type="text" placeholder="How to make me?" rows="8"></textarea>
    </div>
    <div class="form-group">
      <input class="form-control" id="picture" name="recipe[picture]" type="text" placeholder="http...">
    </div>
    <button class="btn btn-primary btn-lg submit_button">Submit</button>
  </form>
</div>
